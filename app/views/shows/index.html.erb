<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Episodes</th>
      <th>G</th>
      <th>Scaffold</th>
      <th>Show</th>
      <th>Title</th>
      <th>Episodes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.title %></td>
        <td><%= show.episodes %></td>
        <td><%= show.g %></td>
        <td><%= show.scaffold %></td>
        <td><%= show.Show %></td>
        <td><%= show.title %></td>
        <td><%= show.episodes %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

